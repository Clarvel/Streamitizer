{
	"name": "StreamWatcher",
	"version": "1.0.1",
	"manifest_version": 3,
	"default_locale":"en",
	"permissions": [
		"alarms",
		"storage",
		"identity",
		"idle",
		"notifications",
		"cookies",
		"tabs"
	],
	"optional_permissions":[],
	"host_permissions":[
		"*://*.piczel.tv/",
		"*://*.youtube.com/"
	],
	"description": "An extension that tracks who's streaming across multiple sites",
	"options_ui": {
		"page": "html/options.html",
		"open_in_tab": false
	},
	"icons": {
        "128":"icons/icon.png"
	},
	"background":{
		"service_worker":"background.js",
		"scripts":["background.js"],
		"type":"module"
	},
	"action":{
		"default_icon":{
			"128":"icons/icon.png"
		},
		"default_popup":"html/popup.html",
		"default_area":"navbar"
	}
}